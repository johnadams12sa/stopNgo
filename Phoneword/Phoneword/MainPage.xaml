<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
                   xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                   x:Class="Phoneword.MainPage">
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness">
            <On Platform="iOS" Value="20, 40, 20, 20" />
            <On Platform="Android, UWP" Value="20" />
        </OnPlatform>
    </ContentPage.Padding>
    <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
        <Label Text="stop N go" FontSize="50" FontFamily="Verdana" FontAttributes="Bold"/>
        <Button Text="Start Tracking" Clicked="OnTracking" FontFamily="Verdana"/>
        <Button Text="History" Clicked="History" FontFamily="Verdana"/>
        <Button Text="Statistics" Clicked="Statistics" FontFamily="Verdana"/>
    </StackLayout>
</ContentPage> 